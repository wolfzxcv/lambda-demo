{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": ".build",
    "moduleResolution": "node",
    "rootDir": "./",
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
